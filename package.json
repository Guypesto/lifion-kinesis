{
  "name": "lifion-kinesis",
  "version": "0.0.0",
  "description": "Lifion client for Amazon Kinesis Data streams",
  "keywords": [
    "adp",
    "amazon",
    "api",
    "aws",
    "big data",
    "client",
    "core",
    "kinesis",
    "lifion"
  ],
  "author": "Edgardo Avil√©s <eaviles@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.6.0"
  },
  "scripts": {
    "build-docs": "mkdir -p docs && jsdoc2md --no-gfm lib/*.js > docs/API.md && git add docs/API.md",
    "build-docs-watch": "npm-watch build-docs",
    "eslint": "eslint . --ext .js,.json --cache",
    "format": "prettier --write '**/*.{md,js,json}' '!reports/**/*.{js,json}'",
    "jest": "TEST_REPORT_PATH=./reports jest",
    "jest-watch": "npm run jest -- --watch --coverageReporters=html",
    "lint": "eslint . --ext .js,.json",
    "precommit": "npm run build-docs && lint-staged",
    "prejest": "mkdir -p ./reports",
    "prepare": "check-engines",
    "test": "npm run jest && codecov",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "aws-sdk": "^2.322.0",
    "fast-deep-equal": "^2.0.1"
  },
  "devDependencies": {
    "auto-changelog": "^1.8.0",
    "chalk": "^2.4.1",
    "check-engines": "^1.5.0",
    "codecov": "^3.1.0",
    "eslint": "^5.6.0",
    "eslint-config-lifion": "^1.0.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jest-junit-reporter": "^1.1.0",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^7.3.0",
    "npm-watch": "^0.4.0",
    "prettier": "^1.14.3",
    "semver": "^5.5.1"
  },
  "auto-changelog": {
    "commitLimit": false,
    "template": "./templates/changelog-template.hbs"
  },
  "eslintConfig": {
    "extends": "lifion"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "../reports",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "rootDir": "lib",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-junit-reporter"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "branchPrefix": "feature/renovate-",
    "rangeStrategy": "bump"
  },
  "watch": {
    "build-docs": {
      "patterns": [
        "lib"
      ]
    }
  }
}
